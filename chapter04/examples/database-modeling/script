// 회원 테이블 생성

DROP TABLE `MEMBER`;

CREATE TABLE `MEMBER`
(
    `MEMBER_ID`    VARCHAR(20) NOT NULL COMMENT '회원ID',
    `NAME`    VARCHAR(10) NOT NULL COMMENT '이름',
    `EMAIL`    VARCHAR(30) NOT NULL COMMENT '이메일',
    `PASSWORD`    VARCHAR(20) NOT NULL COMMENT '비밀번호',
 PRIMARY KEY ( `MEMBER_ID` )
)
 COMMENT = '회원';

ALTER TABLE `MEMBER`
 ADD CONSTRAINT `엔터티1_PK2` PRIMARY KEY ( `MEMBER_ID` );

SELECT
    MEMBER_ID,
    NAME,
    EMAIL,
    PASSWORD
FROM MEMBER;

INSERT INTO MEMBER(MEMBER_ID,NAME,EMAIL,PASSWORD)
    VALUES('','','','');

// 메모 테이블 생성

DROP TABLE `MEMO`;

CREATE TABLE `MEMO`
(
    `MEMO_ID`    VARCHAR(20) NOT NULL COMMENT '메모ID',
    `TITLE`    VARCHAR(30) NOT NULL COMMENT '제목',
    `CONTENTS`    VARCHAR(1000) NOT NULL COMMENT '내용',
    `MEMBER_ID`    VARCHAR(20) NOT NULL COMMENT '회원ID',
 PRIMARY KEY ( `MEMO_ID` )
)
 COMMENT = '메모';

ALTER TABLE `MEMO`
 ADD CONSTRAINT `엔터티1_PK` PRIMARY KEY ( `MEMO_ID` );

SELECT
    MEMO_ID,
    TITLE,
    CONTENTS,
    MEMBER_ID
FROM MEMO;

INSERT INTO MEMO(MEMO_ID,TITLE,CONTENTS,MEMBER_ID)
    VALUES('','','','');
